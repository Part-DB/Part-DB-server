/* POSITIONING */

.left {
    text-align: left;
}

.right {
    text-align: right;
}

.center {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
}

.justify {
    text-align: justify;
}

/* ==== GRID SYSTEM ==== */

.container {
    width: 90%;
    margin-left: auto;
    margin-right: auto;
}

.row {
    position: relative;
    width: 100%;
    page-break-after: avoid;
    page-break-before: avoid;
    page-break-inside: avoid;
}

.row [class^="col"] {
    float: left;
    margin: 0 0.5%;
    min-height: 0.125rem ;
}

.row::after {
    content: "";
    display: table;
    clear: both;
}

